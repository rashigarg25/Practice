package com.practice.problems;

/*		/\
	   /  \
	  / /\ \
	 / /  \ \
	/ / /\ \ \
   / / /  \ \ \

        /\
	   /  \
	  / /\ \
	 / /  \ \
	/ / /\ \ \    */

public class Pattern1 {

	public static void main(String... args) {

		int total = 5;

		for (int i = 1; i <= total; i++) {

			for (int j = 1; j <= total - i; j++) {

				if (i == j) {
					System.out.println("/");
				} else {
					System.out.println(" ");
				}
			}

		}

	}

}