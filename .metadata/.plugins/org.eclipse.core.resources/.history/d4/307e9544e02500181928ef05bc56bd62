package com.practice.problems;

/*		/\
	   /  \
	  / /\ \
	 / /  \ \
	/ / /\ \ \
   / / /  \ \ \

        /\
	   /  \
	  / /\ \
	 / /  \ \
	/ / /\ \ \    */

public class Pattern1 {

	public static void main(String... args) {

		int total = 5;

		for (int i = 1; i <= total; i++) {

			for (int j = total; j <= total - i + 1; j++) {

				if ((total - i + 1) == j) {
					System.out.print("/");
				} else {
					System.out.print(" ");
				}
			}
			for()
			System.out.println();

		}

	}

}